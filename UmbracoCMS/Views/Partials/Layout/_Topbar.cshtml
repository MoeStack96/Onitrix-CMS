@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

@{
    var rootContent = Umbraco.ContentAtRoot();
    var siteSettings = rootContent.OfType<SiteSettings>().FirstOrDefault();

    var contactAddress = siteSettings?.ContactAddress ?? "Ingen address angiven";
}

<div class="bg-primary">
    <div class="container mx-auto px-6 lg:px-8 py-2 flex items-center justify-between">
        <p class="text-xs text-neutral">@contactAddress</p>

        <div class="flex">
            @if (siteSettings?.PlatformList != null)
            {
                @foreach (var item in siteSettings.PlatformList)
                {
                    if (item.Content is SocialMediaItem mediaItem)
                    {
                        switch (mediaItem.PlatformName!.ToLower())
                        {
                            case "facebook":
                                <a href="@mediaItem.PlatformAccountUrl" target="_blank" rel="noopener noreferrer" class="flex items-center justify-center px-3 text-sm text-neutral hover:opacity-80">
                                    <i class="fa-brands fa-facebook"></i>
                                </a>
                                break;

                            case "x":
                                <a href="@mediaItem.PlatformAccountUrl" target="_blank" rel="noopener noreferrer" class="flex items-center justify-center px-3 text-sm text-neutral hover:opacity-80">
                                    <i class="fa-brands fa-twitter"></i>
                                </a>
                                break;

                            case "linkedin":
                                <a href="@mediaItem.PlatformAccountUrl" target="_blank" rel="noopener noreferrer" class="flex items-center justify-center px-3 text-sm text-neutral hover:opacity-80">
                                    <i class="fa-brands fa-linkedin"></i>
                                </a>
                                break;
                        }
                    }
                }
            }
        </div>
    </div>
</div>